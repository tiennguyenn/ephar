        '@AdminBundle/Resources/public/js/admin_doctor_login_edit.js'
        debug=false
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
{% block pageTitle %}
    <h1>{{ title }}</h1>
{% endblock %}
{% block breadcrumb %}
    <li> <a href="{{ path('admin_dashboard')}}">Home</a> <i class="fa fa-circle"></i> </li>
    <li> <a href="{{ path('admin_doctor_list')}}">List Doctors</a> <i class="fa fa-circle"></i> </li>
    <li> <a href="{{ path('admin_doctor_login',{'id': doctorId})}}">List Doctors Login</a> <i class="fa fa-circle"></i> </li>
    <li> <span class="active">{{ title }}</span> </li>
{% endblock %}
{% block content %}
    <div class="portlet light bordered" id="form_wizard_1" enctype="multipart/form-data"  >
        <div class="portlet-body form">
            <input type="hidden" value="{{app.request.getBaseURL()}}/" id="asset-url"/>
            <input type="hidden" value="{{path(successUrl, {'id': doctorId})}}" id="success-url"/>
			<input type="hidden" value="{{ doctorLogin ? doctorLogin.id : '' }}" id="current-doctor-login-id"/>
            <input type="hidden" value="{{path('admin_validate_email')}}" id="validate-email-url"/>
            <form class="form-horizontal" action="" id="admin-register-doctor-login" method="POST" enctype="multipart/form-data">
                <div class="form-wizard">
                    <div class="form-body">
                        <div class="form-content">
							{% if errors.error is defined %}
                            <div class="alert alert-danger">
                                <button class="close" data-dismiss="alert"></button> {{ errors.error }}</div>
							{% endif %}
                            <h4 class="block">Login Doctor Information</h4>
                            <div class="form-group mb-grid">
                                <div class="col-md-4">
                                    <label>{{ form.firstName.vars.label }} <span class="required" aria-required="true"> * </span></label>
                                    {{ form_widget(form.firstName,{'attr':{'class':'form-control'} })}}
									{{ form_errors(form.firstName) }}
                                </div>
                                <div class="col-md-4">
                                    <label>{{ form.lastName.vars.label }} <span class="required" aria-required="true"> * </span></label>
                                    {{ form_widget(form.lastName,{'attr':{'class':'form-control'} })}}         
									{{ form_errors(form.lastName) }}
                                </div>
                                <div class="col-md-4">                                    
                                    <div class="mt-radio-inline mt-radio-inline-grid">
                                        <label>{{ form.gender.vars.label }} <span class="required" aria-required="true"> * </span></label>
                                        {{ form_widget(form.gender)}}  
										{{ form_errors(form.gender) }}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mb-grid">
                                <div class="col-md-4">
                                    <label>{{ form.email.vars.label }} <span class="required" aria-required="true"> * </span></label>
                                    {{ form_widget(form.email,{'attr':{'class':'form-control'} })}} 
									{{ form_errors(form.email) }}
									{% if errors.email is defined %}
									<span id="admin_doctor_login_email-error" class="error">{{ errors.email }}</span>
									{% endif %}
                                </div>
                                <div class="col-md-8">
                                    <label>{{ form.phoneLocation.vars.label }} <span class="required" aria-required="true"> * </span></label>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class=" dropdown-parent" id="dropdown-parent">
                                                <div class="form-float clearfix">
                                                    <div class="col-md-5">
                                                        {{form_widget(form.phoneLocation,{'attr':{'class':'form-control select2'} }) }}
                                                    </div>
                                                    <div class="col-md-7">
                                                        {{ form_widget(form.phone, {'attr':{'class':'form-control'}})}}
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mb-grid">
                                <div class="col-md-4">
                                    <h4 class="block">{{ form.privilege.vars.label }} <span class="required" aria-required="true"> * </span></h4>
                                    {{ form_widget(form.privilege,{'attr':{'class':'form-checkboxes'} })}} 
									{{ form_errors(form.privilege) }}
                                </div>                               
                            </div>  
                            <h4 class="block">Photo</h4>
                            <div class="form-group">
                                <div class="col-md-4"> 
                                    <label>Upload Profile <span class="required" aria-required="true"> *</span></label>
                                    <div class="fileinput fileinput-new" data-provides="fileinput" id='doctor-profile' >
                                        <div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
                                            {% if user and user.profilePhotoUrl |length %}
                                                <img src="{{ asset(user.profilePhotoUrl) }}&{{ date().timestamp }}" alt="" />                
                                            {% else %}
                                                <img src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&amp;text=no+image" alt=""  /> 
                                               
                                            {% endif %}
                                        </div>
                                        <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;"> </div>
                                        <div>
                                            <span class="btn btn-outline blue btn-ahalf-circle btn-sm text-uppercase btn-file">
                                                <span class="fileinput-new"> Select image </span>
                                                <span class="fileinput-exists"> Change </span>
                                                {{ form_widget(form.photo) }}
                                            </span>
                                            <a href="javascript:;" class="btn btn-outline red btn-ahalf-circle btn-sm text-uppercase fileinput-exists" data-dismiss="fileinput"> Remove </a>
                                        </div>
										{% if errors.photo is defined %}
										<span id="admin_doctor_login_photo-error" class="error">{{ errors.photo }}</span>
										{% endif %}
                                    </div>
                                 </div>
                            </div>    
                        </div>
                       <div class="form-actions">
                          <div class="row">
                            <div class="col-md-12">
                              <a href="{{path('admin_doctor_login',{'id': doctorId})}}" class="btn grey-dark btn-ahalf-circle text-uppercase btn-sm button-back">Cancel</a>
                              <a href="javascript:void(0);" class="btn btn-ahalf-circle text-uppercase green-seagreen btn-icon-right btn-sm button-submit" id="admin-register-doctor-login-submit">Save</a>
                            </div>
                          </div>
                        </div>
                    </div>
                </div>
                {{ form_rest(form) }}
            </form>
        </div>
    </div>
{% endblock %}