{% extends '@Admin/layout.html.twig' %} 
{% block classbody %}login otp{% endblock %}
{% block body %}
    <!-- BEGIN LOGIN -->
    <div class="content">
        <form action="{{path('login_check')}}" method="post">
            <input type="hidden" name="_email" value="{{ userEmail }}">
            <p> Please input the code from Google Authenticator App on your phone. </p>
            {% for flashMessage in app.session.flashbag.get('msg') %}
                
                {% if flashMessage.error is defined %}
                <div class="alert alert-danger">
                    <span> {{ flashMessage.error }} </span>
                    <button class="close" data-close="alert"></button>
                </div>
                {% else %}
                <div class="alert alert-success">
                    <span> {{ flashMessage.success }} </span>
                    <button class="close" data-close="alert"></button>
                </div>
                {% endif %}

            {% endfor %}
            <div class="form-group">
                <div class="input-icon">
                    <i class="fa fa-key"></i>
                    <input class="form-control placeholder-no-fix" type="text" autocomplete="off"
                           placeholder="Enter Google Authenticator Code here" name="google_auth_code" /> </div>
            </div>
            <div class="form-actions clearfix">
                <button type="submit" class="btn green pull-right"> Submit </button>
            </div>
            <input type="hidden" name="token" value="{{ csrf_token('core-login') }}" />
        </form>
    </div>
    <!-- END LOGIN -->
{% endblock %}
{% block javascripts %}
    <script>
        var background1 = "{{ asset('bundles/admin/assets/pages/media/bg/1.jpg') }}";
        var background2 = "{{ asset('bundles/admin/assets/pages/media/bg/2.jpg') }}";
        var background3 = "{{ asset('bundles/admin/assets/pages/media/bg/3.jpg') }}";
        var background4 = "{{ asset('bundles/admin/assets/pages/media/bg/4.jpg') }}";
    </script>
    {% javascripts
        '@AdminBundle/Resources/public/assets/global/plugins/jquery-validation/js/jquery.validate.min.js'
        '@AdminBundle/Resources/public/assets/global/plugins/backstretch/jquery.backstretch.min.js'
        '@AdminBundle/Resources/public/assets/pages/scripts/login-4.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script>
        $(document).ready(function()
        {
            $('input[name="google_auth_code"]').keypress(function (e) {
                if(e.which == 13) {
                    $('form').submit();
                }
            });
        })
    </script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets
        'bundles/admin/assets/pages/css/login-4.min.css'
        filter='cssrewrite'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}