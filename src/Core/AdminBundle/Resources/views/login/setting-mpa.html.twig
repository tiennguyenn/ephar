{% extends '@Admin/master_layout.html.twig' %} 
{% block classbody %} login setup-password{% endblock %}
{% block body %}
    
    <div class="logo">
        <a href="{{path('login')}}">
            {% if logo_parkway %}
                <img src="{{ asset('bundles/admin/assets/pages/img/parkwaypp.png')}}" alt="" /> </a>
            {% else %}
                <img src="{{ asset('bundles/admin/assets/pages/img/logo.png')}}" alt="" /> </a>
            {% endif %}
    </div>
    <!-- BEGIN LOGIN -->
    <div class="content">
        {{ form_start(formChangePassword) }}
            <p class="form-wellcome">{{displayTxt}}</p>
            {% for flashMessage in app.session.flashbag.get('msg') %}

                {% if flashMessage.error is defined %}
                    <div class="alert alert-danger">
                        <span> {{ flashMessage.error }} </span>
                        <button class="close" data-close="alert"></button>
                    </div>
                {% else %}
                    <div class="alert alert-success">
                        <span> {{ flashMessage.success }} </span>
                        <button class="close" data-close="alert"></button>
                    </div>
                {% endif %}

            {% endfor %}
           <div class="form-group">
             <div class="col-md-7">
               <h3 class="form-title">Set up your G-MEDS Password:</h3>
				<div class="row form-group">
					<label class="control-label col-md-5"><strong>Your Username:</strong></label>
					<div class="col-md-7"><label class="control-label"><strong>{{ email }}</strong></label></div>
				</div>
                <div class="row form-group">
                  <label class="control-label col-md-5">Password<span class="required" aria-required="true"> * </span></label>
                  <div class="col-md-7">
                    {{ form_widget(formChangePassword.new_password, {'attr': {'class': 'form-control'}}) }}
                        <div class="errorBox"></div>
                  </div>

                </div>
                <div class="row form-group">
                    <label class="control-label col-md-5">Confirm Password<span class="required" aria-required="true"> * </span></label>
                  <div class="col-md-7">
                        {{ form_widget(formChangePassword.confirm_password, {'attr': {'class': 'form-control'}}) }}
                        <div class="errorBox"></div>
                  </div>
                </div>
                <div class="row">
                    <div class="col-md-5"></div>
                    <div class="col-md-7"><a href="javascript:void(0);" class="btn btn-ahalf-circle text-uppercase green-seagreen btn-sm btn-icon-right" id="btn-submit-setting-pwd"> Submit and continue <i class="fa fa-arrow-right"></i> </a></div>
                </div>
             </div>
             <div class="col-md-5 pl-0">
               <div class="bg-white setup-password-note">
                 <p>Tips for setting up a strong password:</p>
                 <ul class="list-item">
                   <li class="each-item"><span class="badge badge-success">1</span> Use at least 8 charaters</li>
                   <li class="each-item"><span class="badge badge-success">2</span> Use a combination of upper and lower case letters</li>
                   <li class="each-item"><span class="badge badge-success">3</span> Use at least 1 number</li>
                 </ul>
               </div>
             </div>
           </div>

           <input type="hidden" name="id" value="{{id}}">
            
        {{ form_end(formChangePassword) }}
    
    </div>
    <!-- END LOGIN -->
    <!-- BEGIN COPYRIGHT -->
    <div class="copyright">  </div>
    <!-- END COPYRIGHT -->
    <div id="modal-setting-pwd" class="modal fade modal-new" data-width="700" data-backdrop="static">
        <div class="modal-body">
            <div class="text-center mt-15">
                <i class="icon-check icon-check-lg"></i>
                <p>You have set up your password successfully. <br>You may now log in to G-MEDS using your new password.</p>
                <div>
                    <a href="{{ path('login') }}" class="btn btn-ahalf-circle text-uppercase grey-dark btn-sm ml-10">Close</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script>
        var background1 = "{{ asset('bundles/admin/assets/pages/media/bg/1.jpg') }}";
        var background2 = "{{ asset('bundles/admin/assets/pages/media/bg/2.jpg') }}";
        var background3 = "{{ asset('bundles/admin/assets/pages/media/bg/3.jpg') }}";
        var background4 = "{{ asset('bundles/admin/assets/pages/media/bg/4.jpg') }}";
    </script>
    {% javascripts
        '@AdminBundle/Resources/public/assets/global/plugins/jquery-validation/js/jquery.validate.min.js'
        '@AdminBundle/Resources/public/assets/global/plugins/backstretch/jquery.backstretch.min.js'
        '@AdminBundle/Resources/public/assets/global/plugins/bootstrap-modal/js/bootstrap-modalmanager.js'
        '@AdminBundle/Resources/public/assets/global/plugins/bootstrap-modal/js/bootstrap-modal.js'
        '@AdminBundle/Resources/public/assets/pages/scripts/login-4.js'
        '@AdminBundle/Resources/public/js/forgot_password.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script>
        $(document).ready(function()
        {
            $('#clickmewow').click(function()
            {
                $('#radio1003').attr('checked', 'checked');
            });
        })
    </script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets
        'bundles/admin/assets/global/plugins/bootstrap-modal/css/bootstrap-modal-bs3patch.css'
        'bundles/admin/assets/global/plugins/bootstrap-modal/css/bootstrap-modal.css'
        'bundles/admin/assets/pages/css/login-4.min.css'
        filter='cssrewrite'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}