<div class="form-body form-repeat">
    <div id="notification">
    </div>
    <div class="mb-20"><strong>Reddot Payment (Singapore)</strong></div>
    <p>Payment method: <span class="uppercase bold">Visa or mastercard</span></p>
    <div class="row mb-20">
        <form class="form-horizontal form-margin-share" id='form-10'>
            {{ form_widget(form_vm_mdr_r.module) }}
            {{ form_widget(form_vm_mdr_r.title) }}
            <div class="col-md-4">
                <div class="form-group">
                    <label class="col-md-6 control-label control-label-2lines valign-middle"><span>Payment Gateway Variable</span></label>
                    <div class="col-md-6">
                        <div class="input-medium-wrapper">
                            <div class="input-medium-wrap">
                                <div class="input-group input-small">
                                    {{ form_widget(form_vm_mdr_r.id)}}  
                                    {{ form_widget(form_vm_mdr_r.fee,{'attr':{'class':'form-control on-digit-percent'} })}}
                                    <span class="input-group-addon">%</span>
                                </div>
                                <div class="current-data">
                                    {% if vm_mdr_r > 0 %}
                                        <span id="" class="">Current value is {{ vm_mdr_r }}</span>
                                    {% endif %}
                                </div>
                            </div>                        
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-6 control-label control-label-2lines valign-middle"><span>Percentage change will take effect on:</span></label>
                    <div class="col-md-6">
                        <div class="input-group date date-picker" data-date-format="dd-mm-yyyy" data-date-start-date="+0d">
                            {{ form_widget(form_vm_mdr_r.date,{'attr':{'class':'form-control'} })}}
                            <span class="input-group-btn">
                                <button class="btn default" type="button">
                                    <i class="fa fa-calendar"></i>
                                </button>
                            </span>
                        </div>

                        <div class="btn-update-margin"><a href="javascript:void(0);" class="btn btn-ahalf-circle text-uppercase green-seagreen btn-sm">Update</a></div>
                    </div>
                </div>
            </div>
        </form>
        <form class="form-horizontal form-margin-share" id='form-11'>
            {{ form_widget(form_rf_fix_r.module) }}
            {{ form_widget(form_rf_fix_r.title) }}
            <div class="col-md-4">
                <div class="form-group">
                    <label class="col-md-6 control-label control-label-2lines valign-middle"><span>Payment Gateway Fixed</span></label>
                    <div class="col-md-6">
                        <div class="input-medium-wrapper">
                            <div class="input-medium-wrap">
                                <div class="input-group input-small">
                                    <span class="input-group-addon">SGD</span>
                                    {{ form_widget(form_rf_fix_r.id)}}  
                                    {{ form_widget(form_rf_fix_r.fee,{'attr':{'class':'form-control on-digit-percent'} })}}         

                                </div>
                                <div class="current-data">
                                    {% if rf_fix_r > 0 %}
                                        <span id="" class="">Current value is {{ rf_fix_r }}</span>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-6 control-label control-label-2lines valign-middle"><span>Percentage change will take effect on:</span></label>
                    <div class="col-md-6">
                        <div class="input-group date date-picker" data-date-format="dd-mm-yyyy" data-date-start-date="+0d">
                            {{ form_widget(form_rf_fix_r.date,{'attr':{'class':'form-control'} })}}   
                            <span class="input-group-btn">
                                <button class="btn default" type="button">
                                    <i class="fa fa-calendar"></i>
                                </button>
                            </span>
                        </div>

                        <div class="btn-update-margin"><a href="javascript:void(0);" class="btn btn-ahalf-circle text-uppercase green-seagreen btn-sm">Update</a></div>
                    </div>
                </div>
            </div>
        </form>
    </div> 
</div>