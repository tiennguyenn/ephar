    {% endjavascripts %}

{% endblock %}


{% block pageTitle %}
    <h1>{{ title }}</h1>
{% endblock %}
{% block breadcrumb %}
    <li> <a href="{{ path('admin_dashboard')}}">Home</a> <i class="fa fa-circle"></i> </li>
    <li> <a href="{{ path('admin_agent')}}">List Agents</a> <i class="fa fa-circle"></i> </li>
    <li> <a href="{{ path('admin_sub_agent',{'id':agentId})}}">List Sub Agents</a> <i class="fa fa-circle"></i> </li>
    <li> <span class="active">{{ title }}</span> </li>
{% endblock %}
{% block content %}
    <div class="portlet light bordered" id="form_wizard_1" enctype="multipart/form-data"  >
        <div class="portlet-body form">
    
            <input type="hidden" value="{{path(ajaxDependent)}}" id="ajaxUrlDependent" />
         
            <input type="hidden" value="{{app.request.getBaseURL()}}/" id="asset-url"/>
            <input type="hidden" value="{{path(successUrl)}}" id="success-url"/>
            <input type="hidden" value="{{ agentId }}" id="main-agent-id" />
            <input type="hidden" value="{{ agent.id }}" id="current-agent-id" />
            <input type="hidden" value="{{path('admin_validate_email')}}" id="validate-email-url"/>
            <form class="form-horizontal" action="#" id="admin-register-agent" method="POST" enctype="multipart/form-data">
                <div class="form-wizard">
                    <div class="form-body">
                        <div class="form-content">
                             <div class="company-detail">
                                <h4 class="block mt-0 pt-0">Company Detail</h4>
                                <dl class="list-item list-item-companydetail clearfix">
                                  <dt>Company Name:</dt>
                                  <dd>{{companyDetail.companyName }}(Agent Code: {{companyDetail.agent.agentCode}})</dd>
                                </dl>

                                <dl class="list-item list-item-companydetail clearfix">
                                  <dt>Company Address:</dt>
                                  <dd>
                                    {{companyDetail.address.line1}}, {{companyDetail.address.postalCode}} {{companyDetail.address.city.name}} {% if companyDetail.address.city.state != null %} {{companyDetail.address.city.state.name}} {% endif %} {{companyDetail.address.city.country.name}}
                                    
                                  </dd>
                                </dl>

                                <dl class="list-item list-item-companydetail clearfix">
                                  <dt>Company Phone No:</dt>
                                  <dd>
                                    +{{companyDetail.phone.country.phoneCode}}
                                    {{companyDetail.phone.areaCode}}
                                    {{companyDetail.phone.number}}
                                  </dd>
                                </dl>
                              </div>
                            {#<div class="alert alert-danger display-none">
                                <button class="close" data-dismiss="alert"></button> You have some form errors. Please check below. </div>
                            <div class="alert alert-success display-none">
                                <button class="close" data-dismiss="alert"></button> Your form validation is successful! </div>#}
                            <h4 class="block">Sub Agent Information</h4>
                            <div class="form-group mb-grid">
                                <div class="col-md-4">


                                    <label>{{ form.firstName.vars.label }} <span class="required" aria-required="true"> * </span></label>
                                    {{ form_widget(form.firstName,{'attr':{'class':'form-control'} })}}

                                </div>
                                <div class="col-md-4">
                                    <label>{{ form.lastName.vars.label }} <span class="required" aria-required="true"> * </span></label>
                                    {{ form_widget(form.lastName,{'attr':{'class':'form-control'} })}}         
                                </div>
                                <div class="col-md-4">                                    
                                    <div class="mt-radio-inline mt-radio-inline-grid">
                                        <label>{{ form.gender.vars.label }} <span class="required" aria-required="true"> * </span></label>
                                        {{ form_widget(form.gender)}}  
                                    </div>

                                </div>
                            </div>
                            <div class="form-group mb-grid">
                                <div class="col-md-4">
                                    <label>{{ form.email.vars.label }} <span class="required" aria-required="true"> * </span></label>
                                    {{ form_widget(form.email,{'attr':{'class':'form-control'} })}} 
                                </div> 
                                <div class="col-md-8">
                                    <label>{{ form.phoneLocation.vars.label }} <span class="required" aria-required="true"> * </span></label>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class=" dropdown-parent" id="dropdown-parent">
                                                <div class="form-float clearfix">
                                                    <div class="col-md-5">
                                                        {{form_widget(form.phoneLocation,{'attr':{'class':'form-control select2'} }) }}
                                                    </div>
                                                    <div class="col-md-7">
                                                        {{ form_widget(form.phone, {'attr':{'class':'form-control'}})}}                                            
                                                    </div>
                                                </div>
                                            </div>
                                        </div>   
                                    </div> 
                                    <div class="phone-error-notice"></div>

                                </div>     
                            </div>
                            <div class="form-group mb-grid">
                                <div class="col-md-4">
                                    <label>{{ form.addressLine1.vars.label }} <span class="required" aria-required="true"> * </span></label>
                                    {{ form_widget(form.addressLine1,{'attr':{'class':'form-control'} })}} 
                                </div>
                                <div class="col-md-4">
                                    <label>{{ form.addressLine2.vars.label }}</label>
                                    {{form_widget(form.addressLine2,{'attr':{'class':'form-control '}}) }}

                                </div> 
                                <div class="col-md-4">
                                    <label>{{ form.addressLine3.vars.label }}</label>                              
                                    {{form_widget(form.addressLine3,{'attr':{'class':'form-control '}}) }}
                                    
                                </div>                                
                            </div>  
                             <div class="form-group mb-grid">
                                 <div class="col-md-4">
                                     <label>{{ form.country.vars.label }} <span class="required" aria-required="true"> * </span></label>
                                     {{ form_widget(form.country,{'attr':{'class':'form-control select2'} } ) }}

                                 </div> 
                                 <div class="col-md-4">
                                     <label>{{ form.state.vars.label }} </label>
                                     {{ form_widget(form.state,{'attr':{'class':'form-control select2'} } ) }}

                                 </div>

                                 <div class="col-md-4">
                                     <label>{{ form.city.vars.label }} <span class="required" aria-required="true"> * </span></label>
                                     {{ form_widget(form.city,{'attr':{'class':'form-control select2'} } ) }}
                                 </div>
                            </div>

                       

                            <div class="form-group">

                                <div class="col-md-4">
                                    <label>{{ form.zipCode.vars.label }} <span class="required" aria-required="true"> * </span></label>
                                    {{ form_widget(form.zipCode,{'attr':{'class':'form-control '}}) }}                                   
                                </div>
                            </div>

                            <h4 class="block">Identification</h4>

                           <div class="form-group mb-grid">
                                <div class="col-md-4">
                                    <label>{{ form.localIdPassport.vars.label }} <span class="required" aria-required="true"> * </span></label>
                                    {{form_widget(form.localIdPassport,{'attr':{'class':'form-control '}}) }}
                                </div>
                                <div class="col-md-4">
                                    <label>{{ form.localIdPassportCountry.vars.label }} <span class="required" aria-required="true"> * </span></label>
                                    {{form_widget(form.localIdPassportCountry,{'attr':{'class':'form-control select2','name': 'location'}}) }}
                                </div> 
                                <div class="col-md-4">
                                    
                                </div>                                
                            </div> 
                             <h4 class="block">Photo</h4>
                            <div class="form-group">
                                <div class="col-md-4"> 
                                   
                                    <label>Upload Profile or Company Image <span class="required" aria-required="true"> *</span></label>
                                    <div class="fileinput fileinput-new" data-provides="fileinput" id='doctor-profile' >
                                        <div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
                                            {% if agent.profilePhotoUrl |length %}
                                                <img src="{{ asset(agent.profilePhotoUrl) }}&{{ date().timestamp }}" alt="" />                
                                            {% else %}
                                                <img src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&amp;text=no+image" alt=""  /> 
                                               
                                            {% endif %}
                                        </div>
                                        <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;"> </div>
                                        <div>
                                            <span class="btn btn-outline blue btn-ahalf-circle btn-sm text-uppercase btn-file">
                                                <span class="fileinput-new"> Select image </span>
                                                <span class="fileinput-exists"> Change </span>
                                                {{ form_widget(form.logo,{'attr':{'value': asset(agent.profilePhotoUrl) } }) }}
                                            </span>
                                            <a href="javascript:;" class="btn btn-outline red btn-ahalf-circle btn-sm text-uppercase fileinput-exists" data-dismiss="fileinput"> Remove </a>
                                        </div>
                                    </div>
                                    </div>
                                    <div class="col-md-4"> 
                                    
                                    <label>Master Agent Photo</label>
                                    <div class="fileinput fileinput-new" data-provides="fileinput" id='doctor-profile' >
                                        <div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
                                            
                                            <img src="{{ asset(masteragent.profilePhotoUrl) }}&{{ date().timestamp }}" alt="" />                
                                           
                                        </div>                                      
                                    </div>
                                </div>
                                
                            </div>    
                        </div>
                       <div class="form-actions">
                          <div class="row">
                            <div class="col-md-12">
                              <a href="{{path('admin_sub_agent',{'id': agentId})}}" class="btn grey-dark btn-ahalf-circle text-uppercase btn-sm button-back">Cancel</a>
                              <a href="javascript:void(0);" class="btn btn-ahalf-circle text-uppercase green-seagreen btn-icon-right btn-sm button-submit" id="admin-register-agent-submit">Save</a>
                            </div>
                          </div>
                        </div>
                    </div>

                </div>
                {{ form_rest(form) }}
            </form>
         
          
        </div>
    </div>


{% endblock %}


