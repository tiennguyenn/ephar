<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>Agents</title>
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta content="width=device-width, initial-scale=1" name="viewport" />
        <meta content="Preview page of Metronic Admin Theme #4 for blank page layout" name="description" />
        <meta content="" name="author" />
        <style>
            body {
                color: #333;
                padding: 0;
                margin: 0;
                font-size: 14px;
                font-family: Arial, sans-serif;
            }
            .portlet-title {
                border-left: 1px solid #e7ecf1;
                border-right: 1px solid #e7ecf1;
                border-top: 1px solid #e7ecf1;
                min-height: 41px;
                font-weight: 600;
                font-size: 14px;
                line-height: 18px;
                padding: 10px;
            }
            table {
                width: 100%;
                border: 1px solid #e7ecf1;
            }
            th {
                padding: 10px;
                font-weight: 600;
                vertical-align: bottom;
            }
            td {
                border-top: 1px solid #e7ecf1;
                padding: 10px;
            }
        </style>
    </head>
    <body>
        <div class="portlet">
            <div class="portlet-title">
                <div class="caption">Agents</div>
            </div>
            <div class="portlet-body">
                <table class="table table-hover table-light_">
                    <thead>
                        <tr class="uppercase">
                            <th style="width: 80px">Date</th>
                            <th style="width: 140px">User</th>
                            <th>Changes</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if logs|length > 0 %}
                            {% for log in logs %}
                                <tr>
                                    <td>{{ log.createdOn|date('d M y') }}</td>
                                    <td>{{ log.createdBy }}</td>
                                    {% if log.title == 'new_delivery_partner_created' %}
                                        <td>{{ log.title|replace({'_': ' '})|title }}</td>
                                    {% else %}
                                        <td>
                                            {{ item_log(log, 'deliveryName', 'Delivery Partner Name')|raw }}
                                            {{ item_log(log, 'businessName', 'Business Registration Number')|raw }}
                                            {% if log.oldValue.gst != log.newValue.gst %}
                                                GST is updated
                                                <br>Old Value: {{ log.oldValue.gst > 0 ? 'Yes' : 'No' }}
                                                <br>Old Value: {{ log.newValue.gst > 0 ? 'Yes' : 'No' }}<br><br>
                                            {% endif %}
                                            {{ item_log(log, 'gstNum', 'GST Registration Number')|raw }}
                                            {{ item_log(log, 'email', 'Email')|raw }}
                                            {{ item_log(log, 'phoneNumber', 'Mobile Number')|raw }}
                                            {{ item_log(log, 'line1', 'Address Line 1')|raw }}
                                            {{ item_log(log, 'line2', 'Address Line 2')|raw }}
                                            {{ item_log(log, 'line3', 'Address Line 3')|raw }}
                                            {{ item_log(log, 'country', 'Country')|raw }}
                                            {{ item_log(log, 'state', 'State / Province')|raw }}
                                            {{ item_log(log, 'city', 'City')|raw }}
                                        </td>
                                    {% endif %}
                                </tr>
                            {% endfor %}
                        {% else %}
                            <tr>
                                <td colspan="3"> No log found</td>
                            </tr>
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </body>
</html>
