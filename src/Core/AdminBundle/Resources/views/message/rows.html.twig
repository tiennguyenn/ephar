{% if type == 'sent' %}
<tr data-messageid="{{ data.id }}">
    <td class="inbox-small-cells">
      <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
          <input type="checkbox" class="checkboxes mail-checkbox" value="{{ data.id }}" />
          <span></span>
      </label>
    </td>
    <td class="view-message hidden-xs" width="25%">
      To: {% if data.receiverGroup != "" %}
            {{ data.receiverGroup|replace({'_': ' '})|title }}
          {% else %}
            {{ data.receiverName|trim|default('(no name)') }}
          {% endif %}
    <td class="view-message message-title"><a href="{{ path('message_view', {id: data.id}) }}">{{ item.subject|trim|default('(no subject)') }}</a></td>
    <td class="view-message inbox-small-cells">
      {% if data.attachment|length > 0 %}
        <i class="fa fa-paperclip"></i>
      {% endif %}
    </td>
    <td class="view-message message-title text-right">{{ data.sentDate|date('M d g:i A')}}</td>
</tr>
{% elseif type == 'inbox' %}
    <tr {% if data.readDate == "" %}class="unread"{% endif %} data-messageid="{{ data.id }}">
      <td class="inbox-small-cells">
        <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
            <input type="checkbox" class="checkboxes mail-checkbox" value="{{ data.id }}" />
            <span></span>
        </label>
      </td>
      <td class="view-message hidden-xs" width="25%">{{ data.senderName|trim|default('(no name)') }} - {{ data.senderEmail }}</td>
      <td class="view-message message-title"><a href="{{ path('message_view', {id: data.id}) }}">{{ item.subject|trim|default('(no subject)') }}</a></td>
      <td class="view-message inbox-small-cells">
        {% if data.attachment|length > 0 %}
          <i class="fa fa-paperclip"></i>
        {% endif %}
      </td>
      <td class="view-message message-title text-right">{{ data.sentDate|date('M d g:i A')}}</td>
  </tr>
