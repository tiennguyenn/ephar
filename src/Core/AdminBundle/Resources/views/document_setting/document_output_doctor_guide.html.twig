<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{{ title }}</title>
    <style>
        body {
            margin: 0 !important;
            overflow-y: hidden;
        }
    </style>
</head>
<body>
<div class="page-container">
    <iframe src="{{ fileUrl }}?#toolbar=0&view=FitH&statusbar=0&messages=0&navpanes=0" style="height: 100vh;" width="100%" frameborder="0"></iframe>
</div>
<div class="printarea"></div>

{% javascripts
    '@AdminBundle/Resources/public/assets/global/plugins/jquery.min.js'
    '@AdminBundle/Resources/public/assets/global/plugins/bootstrap/js/bootstrap.min.js'
    '@AdminBundle/Resources/public/assets/global/plugins/jquery-slimscroll/jquery.slimscroll.min.js'
    '@AdminBundle/Resources/public/assets/global/plugins/jquery.blockui.min.js'
    '@AdminBundle/Resources/public/assets/global/plugins/bootstrap-switch/js/bootstrap-switch.min.js'
    '@AdminBundle/Resources/public/assets/global/scripts/app.min.js'
    '@AdminBundle/Resources/public/assets/global/plugins/js.cookie.min.js'

    debug=false

%}
    <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
<script type="text/javascript">
    $('head').append('<style id="printarea">@media print{.page-container{display:none}.printarea{display:block}}</style>');

    $('iframe').load( function() {
        $('iframe').contents().find("head")
            .append('<style>#toolbarViewer,div.toolbar{display: none !important;}</style>')
            .on("contextmenu",function(e){
                alert("You may not copy this document.");
                return false;
            });
    });

    $(document).bind('cut copy paste', function (e) {
        alert("You may not copy this document.");
        e.preventDefault();
    });

    $(document).on("contextmenu",function(e){
        alert("You may not copy this document.");
        return false;
    });
</script>
</body>
</html>