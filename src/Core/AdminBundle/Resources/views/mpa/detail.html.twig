    {% block javascripts %}


        {% javascripts

            '@AdminBundle/Resources/public/assets/global/plugins/bootstrap-modal/js/bootstrap-modalmanager.js'
            '@AdminBundle/Resources/public/assets/global/plugins/bootstrap-modal/js/bootstrap-modal.js'
            '@AdminBundle/Resources/public/assets/global/plugins/bootstrap-select/js/bootstrap-select.min.js'
            '@AdminBundle/Resources/public/assets/global/plugins/jquery-multi-select/js/jquery.multi-select.js'
            '@AdminBundle/Resources/public/assets/global/scripts/app.min.js'

            '@AdminBundle/Resources/public/assets/pages/scripts/form-icheck.min.js'
            '@AdminBundle/Resources/public/assets/pages/scripts/components-multi-select.min.js'
            '@AdminBundle/Resources/public/js/base.js'
            '@AdminBundle/Resources/public/js/admin_mpa_detail.js'
        %}

            <script type="text/javascript" src="{{ asset_url }}"></script>

        {% endjavascripts %}


    {% endblock %}


{% block body %}

    {% include '@Admin/header.html.twig' %}

    <div class="page-container">
        {% include '@Admin/left-menu.html.twig' with { 'mainMenu': '', 'subMenu': '' }   %}
        <input type='hidden' id='ajax-url' value="{{ path(ajaxURL) }}" />
        <input type='hidden' id='current-mpa' value="{{ id}}" />
        <div class="page-content-wrapper">
            <!-- BEGIN CONTENT BODY -->
            <div class="page-content">
                <!-- BEGIN PAGE HEAD-->
                <div class="page-head">
                    <!-- BEGIN PAGE TITLE -->
                    <div class="page-title">
                        <h1>{{ title }}'s doctor list</h1>
                    </div>
                    <!-- END PAGE TITLE -->
                </div>
                <!-- END PAGE HEAD-->
                <!-- BEGIN PAGE BREADCRUMB -->
                <ul class="page-breadcrumb breadcrumb">
                    <li> <a  href="{{ path('admin_dashboard')}}">Home</a> <i class="fa fa-circle"></i> </li>
                    <li> <a href="{{ path('admin_mpa_dashboard')}}">List Master Proxy Account</a> <i class="fa fa-circle"></i> </li>
                    <li> <span class="active">{{ title }}</span> </li>
                </ul>
                <!-- END PAGE BREADCRUMB -->

                <!-- BEGIN PAGE BASE CONTENT -->
                <div class="row">
                    <div class="col-md-12">
                        <!-- Begin: life time stats -->
                        <div class="portlet light">

                            <div class="portlet-body" id="master-body-content">
                                {% if app.session.flashBag.has('success') %}
                                    <div class="alert alert-success">
                                        {% for msg in app.session.flashBag.get('success') %}
                                            {{ msg }}
                                        {% endfor %}
                                    </div>
                                {% endif %}
                                {#<div class="alert alert-danger"><strong>Alert!</strong> You have 3 pending approval.</div>#}
                                {#<div class="alert alert-success"><strong>Alert!</strong> You have 3 pending approval.</div>#}

                                <div id="sample_1_wrapper" class="dataTables_wrapper no-footer">
                                    <div class="row show-grid mb-grid">
                                        <div class="col-lg-4 col-md-8">
                                            <div id="sample_1_filter">
                                                <div class="input-icon right"> <i class="icon-magnifier"></i>
                                                    <input type="text" id="table-search-data" class="form-control" placeholder="Search Doctor Name/Code">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-8 col-md-4 text-right">
                                            <a id="btn-add-doctor-mpa" data-toggle="modal" data-target="#modal-add-doctor" class="btn btn-ahalf-circle text-uppercase green-seagreen btn-outline btn-icon-right btn-sm">
                                                Add Doctor <i class="fa fa-plus"></i> </a>
                                        </div>
                                    </div>





                                    <div class="table-scrollable">
                                        <table class="table table-striped table-bordered table-hover order-column dataTable no-footer" id="list-mpa-admin" role="grid" aria-describedby="sample_1_info" style="width: 1562px;">
                                            <thead>
                                            <tr role="row">
                                                <th class="sorting" data-colum-sort="doctorCode" tabindex="0" aria-controls="sample_1" rowspan="1" colspan="1" data-column-index="0"aria-sort="ascending" aria-label="Code : activate to sort column descending"> Doctor Code  </th>
                                                <th class="sorting" data-colum-sort="doctorName" aria-controls="sample_1" rowspan="1" colspan="1" data-column-index="1" aria-label="Name : activate to sort column ascending">Doctor Name </th>
                                                <th class="sorting" data-colum-sort="registerDate" aria-controls="sample_1" rowspan="1" colspan="1" data-column-index="2" aria-label=" Registration Date : activate to sort column ascending"> Registration Date </th>

                                                <th  tabindex="0" aria-controls="sample_1" rowspan="1" colspan="1" data-column-index="4" aria-label=" Actions : activate to sort column ascending"> Actions </th>
                                            </tr>
                                            </thead>
                                            <tbody id="table-body-mpa">
                                            <tr role="row"><td colspan="5" style="text-align: center;"> Loading...</td></tr>
                                            </tbody>
                                        </table>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-5 col-sm-12">
                                            <div class="dataTables_info"  role="status" aria-live="polite" id="list-tables-info"></div>
                                        </div>
                                        <div class="col-md-7 col-sm-12">
                                            <div class="dataTables_paginate paging_bootstrap_number" id="sample_1_paginate">
                                                <ul class="pagination" style="visibility: visible;" id="list-table-pagin">

                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- END PAGE BASE CONTENT -->
            </div>
        </div>
    </div>

    <div id="modal-add-doctor" class="modal fade modal-new modal-add-doctor" tabindex="-1" data-width="760" data-backdrop="static">
        <div class="modal-body">
            <p class="mt-0 mb-0"><strong>Add doctors to be managed by hospital / clinic manager</strong></p>
            <p class="mt-0 mb-0">Select the doctor accounts that the hospital / clinic manager will manage:</p>

            <div class="row mt-20">
                <div class="col-md-6 col-xs-6"><label>Click to Select Doctor:</label></div>
                <div class="col-md-6 col-xs-6"><label>Click to Remove Doctor:</label></div>
            </div>
            <div class="row mt-10">
                <div class="col-md-6 col-xs-6">
                    <div class="row">
                        <div class="col-md-3"><label>Filter to:</label></div>
                        <div class="col-md-9"><input type="text" placeholder="" data-type="insert" class="form-control filter-input"></div>
                    </div>
                </div>
                <div class="col-md-6 col-xs-6">
                    <div class="row">
                        <div class="col-md-3"><label>Filter to:</label></div>
                        <div class="col-md-9"><input type="text" placeholder="" data-type="remove" class="form-control filter-input"></div>
                    </div>
                </div>
            </div>
            <div class="multi-select-col-6 mt-10">
                <select multiple="multiple" class="multi-select" id="list-mpa-doctor" name="my_multi_select1[]">

                </select>
            </div>

            <div class="mt-20 align-right">
                <a href="#" class="btn btn-ahalf-circle text-uppercase green-seagreen btn-icon-right btn-sm" id="update-asign-doctor-mpa">Save</a>
                <a href="javascript:;" class="btn btn-ahalf-circle text-uppercase grey-dark btn-sm mr-10" data-dismiss="modal">Cancel</a>

            </div>
        </div>
    </div>
    <div id="modal-delete-doctor" class="modal fade modal-new" tabindex="-1" data-width="760" data-backdrop="static">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="fa fa-remove"></i></button>
            <h4 class="modal-title">Remove doctor from manager list</h4>
        </div>
        <div class="modal-body">
            <div class="text-center mt-20">
                <i class="fa fa-exclamation-circle icon-check-lg txt-red"></i>
                <p>Are you sure to remove the doctor from manager list?</p>
                <div>
                    <a href="javascript:;" class="btn btn-ahalf-circle text-uppercase grey-dark btn-sm ml-10 " data-dismiss="modal" >Cancel</a>
                    <a href="javascript:;" class="btn btn-ahalf-circle text-uppercase red btn-sm ml-10" id="delete-mpa-item">Delete</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}