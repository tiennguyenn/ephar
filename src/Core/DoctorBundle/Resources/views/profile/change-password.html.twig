{% extends '@Admin/layout.html.twig' %}
{% block body %}

{% include '@Doctor/header.html.twig' %}

<div class="page-container">
    {% include '@Doctor/left-menu.html.twig' with { 'mainMenu': 'profile', 'subMenu': 'change-password' } %}
    <div class="page-content-wrapper">
        <!-- BEGIN CONTENT BODY -->
        <div class="page-content">
            <!-- BEGIN PAGE HEAD-->
            <div class="page-head">
                <!-- BEGIN PAGE TITLE -->
                <div class="page-title">
                    <h1>Change Password</h1>
                </div>
                <!-- END PAGE TITLE -->
            </div>
            <!-- END PAGE HEAD--> 
            <!-- BEGIN PAGE BREADCRUMB -->
            <ul class="page-breadcrumb breadcrumb">
                <li> <a href="{{ path('doctor_dashboard')}}">Home</a> <i class="fa fa-circle"></i> </li>
                <li> <span class="active">Change Password</span> </li>
            </ul>
            <!-- END PAGE BREADCRUMB -->

            <!-- BEGIN PAGE BASE CONTENT -->
            <div class="row">

                <div class="col-md-12"> 
                    <div class="portlet light bordered" id="form_wizard_1" enctype="multipart/form-data"  >
                        <div class="portlet-body form">
                            <!-- Begin: life time stats -->
                            {{ form_start(formChangePassword) }}
                            <div class="form-wizard">
                                <div class="form-body">
                                    <div class="form-content">
                                        <div class="form-group col-md-12">
                                            <label class="control-label">Current Password <span class="required" aria-required="true"> * </span></label>
                                            {{ form_widget(formChangePassword.current_password, {'attr': {'class': 'form-control'}}) }}
                                            <div class="errorBox"></div>
                                        </div>
                                        <div class="form-group col-md-12">
                                            <label class="control-label">New Password <span class="required" aria-required="true"> * </span></label>
                                            {{ form_widget(formChangePassword.new_password, {'attr': {'class': 'form-control'}}) }}
                                            <div class="errorBox"></div>
                                        </div>
                                        <div class="form-group col-md-12">
                                            <label class="control-label">Re-type New Password <span class="required" aria-required="true"> * </span></label>
                                            {{ form_widget(formChangePassword.confirm_password, {'attr': {'class': 'form-control'}}) }}
                                            <div class="errorBox"></div>
                                        </div>
                                    </div>

                                    <div class="form-actions">
                                        <a href="javascript:;" class="btn btn-ahalf-circle text-uppercase green-seagreen btn-icon-right btn-sm button-submit ml-10" id="btn-submit-pwd">CHANGE PASSWORD</a>
                                    </div>
                                </div>
                            </div>
                            <input type="hidden" id="ajax_password_change" value="{{path('ajax_doctor_change_password')}}">
                            {{ form_end(formChangePassword) }}
                        </div>
                    </div>
                </div>
            </div>
            <!-- END PAGE BASE CONTENT --> 
        </div>
    </div>
</div>
{% include '@Doctor/profile/popup-notice.html.twig' %}
{% endblock %}

{% block javascripts %}
{% javascripts  

    '@AdminBundle/Resources/public/assets/global/plugins/bootstrap-modal/js/bootstrap-modalmanager.js'

    '@AdminBundle/Resources/public/assets/global/plugins/bootstrap-modal/js/bootstrap-modal.js'
    '@DoctorBundle/Resources/public/js/doctor_change_password.js'
    
    debug=false
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}

{% endblock %}

{% block stylesheets %}
    {% stylesheets
        'bundles/admin/assets/global/plugins/bootstrap-modal/css/bootstrap-modal-bs3patch.css'
        'bundles/admin/assets/global/plugins/bootstrap-modal/css/bootstrap-modal.css'
        
        filter='cssrewrite'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}
