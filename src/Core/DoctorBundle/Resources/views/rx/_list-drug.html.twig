{% if drugs|length > 0 %}
<div class="table-scrollable">
  <table class="table table-striped table-bordered table-hover order-column dataTable no-footer" id="sample_1" role="grid" aria-describedby="sample_1_info" style="width: 1562px;">
    <thead>
      <tr role="row">
        <th class="sorting" data-sort="d.name" tabindex="0" aria-controls="sample_1" rowspan="1" colspan="1" data-column-index="0" aria-sort="ascending" aria-label=" Medication : activate to sort column descending" style="width: 47%"> Medication </th>
        <th class="sorting" data-sort="d.costPrice" tabindex="0" aria-controls="sample_1" rowspan="1" colspan="1" data-column-index="1" aria-label=" Selling Price ({{ getCurrencyCode() }}) : activate to sort column ascending"> Selling Price ({{ getCurrencyCode() }}) </th>
        <th class="sorting" data-sort="d.costPrice" tabindex="0" aria-controls="sample_1" rowspan="1" colspan="1" data-column-index="1" aria-label=" Doctor's Margin Share ({{ getCurrencyCode() }}) : activate to sort column ascending"> Cost to Clinic <br> ({{ getCurrencyCode() }}) </th>
        <th tabindex="0" aria-controls="sample_1" rowspan="1" colspan="1" data-column-index="2" aria-label=" Action : activate to sort column ascending"> Action </th>
        <th tabindex="0" aria-controls="sample_1" rowspan="1" colspan="1" data-column-index="3" aria-label=" Favorites : activate to sort column ascending"> Favorites </th>
      </tr>
    </thead>
    <tbody>
      {% for item in drugs %}
      <tr role="row">
        <td>
          <div {% if item.stockStatus == 'Stock when Ordered' %} class="col-md-9" {% endif %}>
            <div class="content-extension">
              <strong>{{ item.name }} <br><span style="color: red">
                      {{ item.extendName }}</span>
              </strong>
                {% if item.isShortLife is defined and  item.isShortLife == true %}
                  <a href="javascript:;" data-placement="right" data-toggle="popover" data-trigger="click" data-popover-content="#popover-inline-1" class="extension-icon">
                    <img src="{{ asset('bundles/admin/assets/layouts/layout4/img/baseline-timelapse-24px.svg') }}" alt="">
                  </a>
                  <!-- Content for Popover #2 -->
                  <div class="hidden" id="popover-inline-1">
                    <div class="popover-body">
                      <a href="javasript:;" class="popover-close" aria-label="Close"> <i class="fa fa-close"></i> </a>
                      <div class="important-content">
                        <div class="important-title"><strong>IMPORTANT NOTE:</strong></div>
                        <p>This drug has short shelf life. Select alternative medications for your overseas patients to avoid dispensing and delivery issues.</p>
                      </div>
                    </div>
                  </div>
                {% endif %}
                {% if item.isColdChain %}
                    <a href="javascript:;" data-placement="right" data-toggle="popover" data-trigger="hover" data-popover-content="#popover-inline-{{ item.id }}" class="extension-icon">
                      <img src="{{ asset('bundles/admin/assets/layouts/layout4/img/cold-chain-icon.png') }}" alt="">
                    </a>
                    <!-- Content for Popover #2 -->
                    <div class="hidden" id="popover-inline-{{ item.id }}">
                      <div class="popover-body">
                        <div class="important-content">
                          <p>This medicine is a cold chain item. Keep refrigerated.</p>
                        </div>
                      </div>
                    </div>
                {% endif %}
            </div>
            <br>
            {% if item.ingredients %}
              {{ item.ingredients }}<br>
            {% endif %}
            {{ item.manufacturer }}<br>
            {{ item.packQuantity * item.minimumOrderQty }} {{ item.doseUnit }}
          </div>
          {% if item.stockStatus == 'Stock when Ordered' %}
            <small class="pull-right col-md-3" style="color: darkorange;">Special order</small>
          {% endif %}
        </td>
        <td class="align-right">{{ (item.price * item.minimumOrderQty)|number_format(2, '.', ',') }}</td>
        <td class="align-right">{{ (item.costToClinic * item.minimumOrderQty)|number_format(2, '.', ',') }}</td>
        <td>
          {% if item.stockStatus == 'In Stock' or item.stockStatus == 'Stock when Ordered' %}
            <a href="javascript:void(0);" class="btn btn-ahalf-circle text-uppercase green-seagreen btn-icon-right btn-xs {{ (item.isColdChain and not isLocalPatient) ? 'disabled' : 'addMedication' }}" data-drugid="{{ item.id }}"> Add medications to RX<i class="fa fa-arrow-right"></i></a>{% if item.isColdChain and not isLocalPatient %}<br/><small style="color: red">This medicine is for local delivery only.</small>{% endif %}
          {% elseif item.stockStatus == 'Out of Stock' %}
            <a href="javascript:void(0);" class="btn btn-ahalf-circle text-uppercase btn-out-stock btn-xs outOfStockMessage" data-drugid="{{ item.id }}"> Out of Stock</a> <br />
            <small style="color: red">Please choose available alternatives or ask our pharmacist</small>
          {% elseif item.stockStatus == 'Discontinued' %}
            <a href="javascript:void(0);" class="btn btn-ahalf-circle text-uppercase btn-discontinued btn-xs"> Discontinued</a> <br />
            <small style="color: red">Please choose available alternatives or ask our pharmacist</small>
          {% endif %}
        </td>
        <td>
        <a href="javascript:void(0);" class="btn btn-ahalf-circle text-uppercase red btn-outline btn-icon-right btn-xs {% if not item.favId %}hide{% endif %} favoriteLink" data-url="{{ path('ajax_handle_favorite', {'drugId': item.id}) }}" data-type="remove">Remove Favorite<i class="fa fa-star"></i></a>
        <a href="javascript:void(0);" class="btn btn-ahalf-circle text-uppercase green-seagreen btn-outline btn-icon-right btn-xs {% if item.favId %}hide{% endif %} favoriteLink" data-url="{{ path('ajax_handle_favorite', {'drugId': item.id}) }}" data-type="add">Add to Favourite<i class="fa fa-star"></i></a>
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
{% else %}
<div class="mt-20">
  <p class="mb-15"><strong>Sorry, we cannot find this medicine. Would you like to request the pharmacy to add this medicine?</strong></p>
  <form action="{{ path('doctor_message_compose') }}" method="POST" id="reportForm" target="_blank">
    <input type="hidden" name="drugName" value="">
  </form>
  <a href="javascript:;" class="btn btn-ahalf-circle text-uppercase green-seagreen btn-sm mr-10 noResultYes"> Yes </a>
  <a href="javascript:;" class="btn btn-ahalf-circle text-uppercase btn-default btn-sm noResultNo"> No</a>
</div>
{% endif %}